# Cardea Sentry - Environment Configuration Template
# Copy to .env and customize for your environment

# Network Configuration
ZEEK_INTERFACE=eth0
SURICATA_INTERFACE=eth0

# Logging Configuration
LOG_LEVEL=info

# Bridge Service Configuration
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8080

# Oracle Cloud Configuration (Phase 3)
# OCI_CONFIG_FILE=/path/to/oci/config
# OCI_PROFILE=DEFAULT
# ORACLE_COMPARTMENT_ID=your-compartment-ocid

# Development Configuration
DEV_MODE=true
DEBUG_SERVICES=false

# Security Configuration
# API_KEY=your-secure-api-key
# WEBHOOK_SECRET=your-webhook-secret

# Data Retention (days)
LOG_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# Performance Tuning
ZEEK_WORKERS=2
SURICATA_THREADS=auto
KITNET_BUFFER_SIZE=10000

# Platform-specific optimizations (auto-detected)
# PLATFORM_OPTIMIZATIONS=true
# CPU_CORES=auto
# MEMORY_LIMIT=4g