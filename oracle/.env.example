# Oracle Backend Environment Configuration
# For production deployment, override these values with environment variables

# Service Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://oracle:your_password_here@db:5432/cardea_oracle

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=change_this_secret_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Sentry Integration
SENTRY_WEBHOOK_TOKEN=change_this_webhook_token

# Alert Processing Configuration
MAX_ALERTS_PER_BATCH=100
ALERT_RETENTION_DAYS=90
THREAT_SCORE_THRESHOLD=0.7
CORRELATION_WINDOW_MINUTES=60

# Default Admin Password (change immediately)
ADMIN_PASSWORD=admin_password_change_me

# Cloud Configuration
CLOUD_PROVIDER=local
ENVIRONMENT=development