# Oracle Backend Environment Configuration
# For production deployment, override these values with environment variables

# Service Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://oracle:your_password_here@db:5432/cardea_oracle

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=change_this_secret_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Sentry Integration
SENTRY_WEBHOOK_TOKEN=change_this_webhook_token

# Alert Processing Configuration
MAX_ALERTS_PER_BATCH=100
ALERT_RETENTION_DAYS=90
THREAT_SCORE_THRESHOLD=0.7
CORRELATION_WINDOW_MINUTES=60

# Azure OpenAI Configuration (AI-Powered Agentic Analysis)
# Get credentials from: https://portal.azure.com -> Azure OpenAI Service
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# AI Agent Configuration
AI_ENABLED=true
AI_MODEL_TEMPERATURE=0.3
AI_MAX_TOKENS=1500

# Default Admin Password (change immediately)
ADMIN_PASSWORD=admin_password_change_me

# Cloud Configuration
CLOUD_PROVIDER=local
ENVIRONMENT=development