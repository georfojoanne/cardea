# Sentry Environment Configuration
# Copy this to .env and configure for your environment

# Sentry Identity
SENTRY_ID=sentry_001

# Network Monitoring
ZEEK_INTERFACE=eth0
SURICATA_INTERFACE=eth0

# KitNET Configuration
KITNET_THRESHOLD=0.95
LOG_LEVEL=info

# Bridge Configuration
ALERT_THRESHOLD=0.95
PORT=8001

# Oracle Integration
ORACLE_WEBHOOK_URL=http://localhost:8000/api/alerts

# Development
NODE_ENV=development