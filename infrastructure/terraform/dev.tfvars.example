# ============================================
# Development Environment Configuration EXAMPLE
# ============================================
# Copy this file to dev.tfvars and fill in values:
#   cp dev.tfvars.example dev.tfvars
#
# Usage: terraform plan -var-file="dev.tfvars"

is_production = false

project_name = "cardea"
location     = "East Asia"
ai_location  = "swedencentral"

# Database (leave null to auto-generate secure password)
db_admin_username = "oracle_admin"
db_admin_password = null  # Will be auto-generated, or set via TF_VAR_db_admin_password

# Oracle container image tag
oracle_image_tag = "latest"

# Sentry allowed IPs (empty = allow all for dev)
# Add your home/office IP here for testing
sentry_allowed_ips = []

# Sentry API key (leave null to auto-generate)
sentry_api_key = null  # Or set via TF_VAR_sentry_api_key

tags = {
  Project     = "Cardea"
  Environment = "Development"
  ManagedBy   = "Terraform"
  CostCenter  = "Hackathon"
}
